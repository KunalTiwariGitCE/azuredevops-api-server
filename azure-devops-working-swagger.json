{
  "swagger": "2.0",
  "info": {
    "title": "Azure DevOps API",
    "description": "Connect to Azure DevOps for project and work item operations",
    "version": "1.0.0"
  },
  "host": "azuredevops-api-live.azurewebsites.net",
  "basePath": "/api",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/projects": {
      "get": {
        "operationId": "ListProjects",
        "summary": "List all projects",
        "description": "Get all Azure DevOps projects",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of projects retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "12345678-1234-1234-1234-123456789012"
                      },
                      "name": {
                        "type": "string",
                        "example": "MyProject"
                      },
                      "description": {
                        "type": "string",
                        "example": "Project description"
                      },
                      "url": {
                        "type": "string",
                        "example": "https://dev.azure.com/organization/project"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/workitems": {
      "post": {
        "operationId": "CreateWorkItem",
        "summary": "Create work item",
        "description": "Create a new work item in Azure DevOps",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Work item data",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["project", "type", "title"],
              "properties": {
                "project": {
                  "type": "string",
                  "description": "Project name",
                  "example": "NHG"
                },
                "type": {
                  "type": "string",
                  "description": "Work item type",
                  "enum": ["Task", "Bug", "User Story", "Feature"],
                  "example": "Task"
                },
                "title": {
                  "type": "string",
                  "description": "Work item title",
                  "example": "New task from API"
                },
                "description": {
                  "type": "string",
                  "description": "Work item description",
                  "example": "Task created via REST API"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Work item created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 123
                    },
                    "title": {
                      "type": "string",
                      "example": "New task from API"
                    },
                    "state": {
                      "type": "string",
                      "example": "New"
                    },
                    "url": {
                      "type": "string",
                      "example": "https://dev.azure.com/organization/project/_workitems/edit/123"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "operationId": "GetWorkItem",
        "summary": "Get work item",
        "description": "Get work item by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Work item ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Work item details retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 123
                    },
                    "title": {
                      "type": "string",
                      "example": "Sample work item"
                    },
                    "description": {
                      "type": "string",
                      "example": "Work item description"
                    },
                    "state": {
                      "type": "string",
                      "example": "Active"
                    },
                    "url": {
                      "type": "string",
                      "example": "https://dev.azure.com/organization/project/_workitems/edit/123"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}